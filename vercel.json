{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "512mb" },
      "functions": { "api/**/*.js": { "memory": 512 } },
      "npm": { "ignoreScripts": false }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}
